      .mt50 {
       margin-top:50px;
      }
      
      .br20 {
      border-radius: 20px;
      }
      .new-user {
      //height:55px;
      position:relative;
      }

      .new-user .line {
      position:absolute;
      border-bottom:1px solid rgb(157, 226, 195);
      width:300px;
      top:10%;
      left:25%;
      cursor: pointer;
      }

      .forget-passwd {
        margin-left:30%;
        color: rgba(255, 255, 255, 0.6);
        margin-bottom:50px;
        padding-top:10px;
      }

      .forget-passwd:hover {
      color:white;
      cursor: pointer;
      }
      
      .register-form {
      display:none;
      }
      .reset-form {
      display:none;
      }

      .transparent-btn {
      color: white;
      background-color: rgba(255, 255, 255, 0.3);
      }

      .transparent-btn:hover {
      color:grey;
      background-color: rgba(255, 255, 255, 0.8);
      }

      .register-smscode-field {
      display:none;
      }

    </style>

