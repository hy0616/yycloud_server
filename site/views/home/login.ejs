  <body>

    <div class="wrapper">
	    <div class="container">
		    <h3 style="color:white;">- 云洋监测 -</h3>


        <form class="form login-form">
          <p class="mt10">
            <input placeholder="用户名" onfocus="this.placeholder = ''" onblur="this.placeholder = '用户名'"  type="text" class="js-login-user"/>
          </p>

          <p class="mt10">
            <input type="password" onfocus="this.placeholder = ''" onblur="this.placeholder = '密码'" placeholder="密码" class="js-login-passwd"/>
          </p>

          <div class="new-user">
            <div class="line"></div>
          </div>

         <div class="forget-passwd js-forget-btn">忘记密码?</div>
          
          <p class="">
            <button type="submit" class="br20" id="login-button">登陆</button>
          </p>
          <br>
          <p>
            <button type="button" class="transparent-btn js-register-btn br20">注册</button>
          </p>

        </form>

        <form class="form reset-form">
          <h5>请输入您的注册电子邮箱:</h5>

          <p class="mt10">
            <input type="text" class="reset-val"/>
          </p>
           

          <div class="new-user">
            <div class="line"></div>
          </div>
          
          <p class="mt50">
            <button type="button" class="br20" id="reset-button">确认</button>
          </p>
          <br>
          <p>
            <button type="button" class="transparent-btn js-go-login-page br20">返回</button>
          </p>

        </form>

        
        <form class="form register-form">
          <p class="mt10">
            <input placeholder="用户名"
                   class="js-register-user"
                   onfocus="this.placeholder = ''"
                   onblur="this.placeholder = '用户名'"
                   type="text">
          </p>

          <p class="mt10">
            <input placeholder="密码"
                   class="js-register-passwd"
                   onfocus="this.placeholder = ''"
                   onblur="this.placeholder = '密码'"
                   type="password">
          </p>

          <p class="mt10">
            <input placeholder="密码确认"
                   class="js-register-passwd2"
                   onfocus="this.placeholder = ''"
                   onblur="this.placeholder = '密码确认'"
                   type="password">
          </p>

          <p class="mt10">
            <input placeholder="手机号码（可选）"
                   class="js-register-phone"
                   onfocus="this.placeholder = ''"
                   onblur="this.placeholder = '手机号码（可选）'"
                   type="text">
          </p>

          <p class="mt10">
            <input placeholder="手机验证码"
                   class="register-smscode-field js-register-smscode"
                   onfocus="this.placeholder = ''"
                   onblur="this.placeholder = '手机验证码'"
                   type="text">
          </p>

          <p class="mt10">
            <input placeholder="电子邮箱（可选）"
                   class="js-register-email"
                   onfocus="this.placeholder = ''"
                   onblur="this.placeholder = '电子邮箱（可选）'"
                   type="email">
          </p>

          <div class="new-user">
            <div class="line"></div>
          </div>

          <p class="mt50">
            <button type="submit" id="register-btn" class="button br20">注 册</button>
          </p>
          <br>
          <p>
            <button type="button" class="transparent-btn js-go-login-page br20">返 回</button>
          </p>

        </form>

	    </div>

